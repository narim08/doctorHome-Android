<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--인터넷 권한-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--위치 권한-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!--알림 권한 (Android 13 이상)-->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!--알람 설정 권한-->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!--부팅 시 알람 재설정-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoctorHome"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddMedicineActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MedicineDetailActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".AIDiagnosisActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".AlarmSettingActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".HospitalFinderActivity"
            android:parentActivityName=".MainActivity" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="fcbf62498963e6b1e2697b0516383d57" />

    </application>

</manifest>